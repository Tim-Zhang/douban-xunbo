{
	"name": "XunBoDouBan",
	"version": "1.0.2",
	"manifest_version": 2,
	"description": "在迅播电影页面显示豆瓣评分",
	"content_scripts": [{
		"matches": ["http://www.xiamp4.com/*"],
		"js": ["jquery.min.js", "douban.js"]
	}],
	"browser_action": {
		"default_icon": "xunbo.png"
	},
	"permissions": [
		"storage",
		"webRequest",
		"webRequestBlocking",
		"<all_urls>"
	],
	"web_accessible_resources": [
		"on.png","off.png"
	]
}